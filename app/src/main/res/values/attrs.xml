<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FaceView">
    <attr name="radius" format="dimension"/>
</declare-styleable>

    <declare-styleable name="DonutChart">
        <attr name="test" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SimpleView">
        <attr name="shape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>
        <attr name="dim" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="ChartView">
        <attr name="backColor" format="color"/> //背景颜色
        <attr name="xNum" format="integer"/>  //x轴显示数量
        <attr name="yNum" format="integer"/>  //y轴显示数量
        <attr name="lineColor" format="color"/> //线的颜色
        <attr name="xLineColor" format="color"/> //x轴颜色
        <attr name="yLineColor" format="color"/> //y轴颜色
        <attr name="xLabelColor" format="color"/> //x轴标签颜色
        <attr name="yLabelColor" format="color"/> //y轴标签颜色
        <attr name="xLabelTextSize" format="float"/> //x轴标签字体大小
        <attr name="yLabelTextSize" format="float"/> //y轴标签字体大小
        <attr name="xStrokeWidth" format="float"/> //x轴 轴线 粗细
        <attr name="yStrokeWidth" format="float"/> //x轴 轴线 粗细
        <attr name="canScroll" format="boolean"/> //是否可以滑动 配合x轴显示数量设定
    </declare-styleable>
</resources>